--- 
import ProductCard from './ProductCard.astro';

const products = [
  { name: 'Nuez Corazon Kg/500gr', image: '/images/nuez-corazon.jpg' },
  { name: 'Nuez Pedaceria Kg/500gr', image: '/images/nuez-pedaceria.jpg' },
  { name: 'Nuez Granillo Kg/500gr', image: '/images/nuez-granillo.jpg' },
  { name: 'Nuez Granzon Kg/500gr', image: '/images/nuez-granzon.jpg' },
  { name: 'Nuez Garapi√±ada Kg/500gr', image: '/images/nuez-garapinada.jpg' }
];
---

<section id="presentaciones" class="presentations-section">
  <h2>Nuestras Presentaciones</h2>
  <div class="products-grid">
    {products.map(product => (
      <ProductCard name={product.name} image={product.image} />
    ))}
  </div>
</section>

<style>
  .presentations-section {
    text-align: center;
    padding: 4rem 2rem;
    background-color: #F9F5F2;

  }
  .presentations-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
