--- 
import ProductCard from './ProductCard.astro';

const products = [
  { name: 'Nueces en Caja', image: '/images/nuez2.jpg' },
  { name: 'Nueces a Granel', image: '/images/nuez3.jpg' },
  { name: 'Mix de Nueces', image: '/images/nuez4.jpg' },
  { name: 'Nueces Especiadas', image: '/images/nuez5.jpg' },
  { name: 'Nueces Org√°nicas', image: '/images/nuez6.jpg' },
  { name: 'Nueces Glaseadas', image: '/images/nuez7.jpg' },
];
---

<section id="presentations" class="presentations-section">
  <h2>Our Presentations</h2>
  <div class="products-grid">
    {products.map(product => (
      <ProductCard name={product.name} image={product.image} />
    ))}
  </div>
</section>

<style>
  .presentations-section {
    text-align: center;
    padding: 4rem 2rem;
  }
  .presentations-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
