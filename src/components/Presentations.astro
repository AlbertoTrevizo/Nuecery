---
import ProductCard from './ProductCard.astro';

const products = [
  { name: 'Nuez Corazon', image: '/images/nuez-corazon.jpg', presentaciones: ['1kg', '500gr'] },
  { name: 'Nuez Pedaceria', image: '/images/nuez-pedaceria.jpg', presentaciones: ['1kg', '500gr'] },
  { name: 'Nuez Granillo', image: '/images/nuez-granillo.jpg', presentaciones: ['1kg', '500gr'] },
  { name: 'Nuez Granzon', image: '/images/nuez-granzon.jpg', presentaciones: ['1kg', '500gr'] },
  { name: 'Nuez Garapi√±ada', image: '/images/nuez-garapinada.jpg', presentaciones: ['1kg', '500gr'] }
];
---

<section id="presentaciones" class="presentations-section">
  <h2>Nuestras Presentaciones</h2>
  <div class="products-grid">
    {products.map(product => (
      <ProductCard name={product.name} image={product.image} presentaciones={product.presentaciones} />
    ))}
  </div>
</section>

<style>
  .presentations-section {
    text-align: center;
    padding: 4rem 2rem;
    background-color: #F9F5F2;
  }
  .presentations-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
