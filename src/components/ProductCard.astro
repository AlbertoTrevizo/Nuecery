
---
const { name, image, presentaciones } = Astro.props;
---

<div class="product-card">
  <img src={image} alt={name} class="product-image" />
  <div class="product-details">
    <h3>{name}</h3>
    <div class="presentaciones">
      {presentaciones.map(p => <span class="presentacion">{p}</span>)}
    </div>
  </div>
</div>

<style>
  .product-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    text-align: center;
  }

  .product-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px 8px 0 0;
  }

  .product-details {
    padding: 0 1rem 1rem;
  }

  .product-card h3 {
    margin: 1rem 0 0.5rem;
  }

  .presentaciones {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .presentacion {
    background-color: #eee;
    color: #333;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.8rem;
  }
</style>
