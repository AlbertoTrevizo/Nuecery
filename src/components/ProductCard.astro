--- 
const { image, name } = Astro.props;
---

<div class="product-card">
  <img src={image} alt={name} />
  <p>{name}</p>
</div>

<style>
  .product-card {
    text-align: center;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    overflow: hidden;
  }
  .product-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  p {
    margin-top: 0.5rem;
    font-weight: bold;
    padding: 1rem;
  }
</style>
