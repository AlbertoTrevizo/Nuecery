--- 
const { image, name } = Astro.props;
---

<div class="product-card">
  <img src={image} alt={name} />
  <p>{name}</p>
</div>

<style>
  .product-card {
    text-align: center;
  }
  .product-card img {
    width: 100%;
    border-radius: 10px;
  }
  p {
    margin-top: 0.5rem;
    font-weight: bold;
  }
</style>
